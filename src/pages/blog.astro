---
import Layout from '../layouts/Layout.astro';
import HeroSection from '../components/HeroSection.astro';
import ScrollSection from '../components/ScrollSection.astro';
import TextReveal from '../components/TextReveal.astro';
import { siteConfig, getImagePath } from '../config/site';
---

<Layout title={siteConfig.blog.hero.title} description={siteConfig.blog.hero.subtitle}>
  <main class="scroll-container">
    <HeroSection
      id="blog-hero"
      title={siteConfig.blog.hero.title}
      subtitle={siteConfig.blog.hero.subtitle}
      backgroundImage={siteConfig.blog.hero.backgroundImage}
    />

    <ScrollSection id="blog-posts" backgroundColor="#1a1f2e">
      <div class="blog-container">
        {
          siteConfig.blog.posts.map((post, index) => (
            <TextReveal delay={index * 100}>
              <article class="blog-card">
                {post.image && (
                  <div class="blog-image">
                    <img src={getImagePath(post.image)} alt={post.title} />
                  </div>
                )}
                <div class="blog-card-header">
                  <span class="blog-category">{post.category}</span>
                  <time class="blog-date" datetime={post.date}>
                    {new Date(post.date).toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric',
                    })}
                  </time>
                </div>
                <h2 class="blog-title">{post.title}</h2>
                <p class="blog-excerpt">{post.excerpt}</p>
                <a href={`/blog/${post.id}`} class="blog-link">
                  {siteConfig.blog.labels.readMore}
                </a>
              </article>
            </TextReveal>
          ))
        }
      </div>
    </ScrollSection>
  </main>
</Layout>

<style>
  .blog-container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    gap: 2rem;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
  }

  .blog-card {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition:
      transform 0.3s ease,
      border-color 0.3s ease;
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }

  .blog-card:hover {
    transform: translateY(-5px);
    border-color: rgba(102, 126, 234, 0.5);
  }

  .blog-image {
    width: 100%;
    height: 250px;
    overflow: hidden;
    position: relative;
  }

  .blog-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .blog-card:hover .blog-image img {
    transform: scale(1.1);
  }

  .blog-card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 1.5rem 1.5rem 1rem;
    font-size: 0.9rem;
  }

  .blog-category {
    background: var(--gradient-primary);
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
  }

  .blog-date {
    color: var(--color-text-muted);
  }

  .blog-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 1.5rem 1rem;
    color: var(--color-text-primary);
  }

  .blog-excerpt {
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin: 0 1.5rem 1.5rem;
    flex-grow: 1;
  }

  .blog-link {
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 600;
    transition: color 0.3s ease;
    margin: 0 1.5rem 1.5rem;
  }

  .blog-link:hover {
    color: var(--color-secondary);
  }
</style>
