---
// Glassmorphism Card with hover effects
interface Props {
  title?: string;
  content?: string;
  image?: string;
  gradient?: string;
}

const {
  title = 'Glass Card',
  content = 'Beautiful glassmorphism effect',
  image = '',
  gradient = 'linear-gradient(135deg, rgba(102, 126, 234, 0.2), rgba(118, 75, 162, 0.2))',
} = Astro.props;
---

<div class="glass-card">
  <div class="glass-card-bg" style={`background: ${gradient}`}></div>
  {
    image && (
      <div class="glass-card-image">
        <img src={image} alt={title} />
      </div>
    )
  }
  <div class="glass-card-content">
    <h3>{title}</h3>
    <p>{content}</p>
  </div>
  <div class="glass-card-shine"></div>
</div>

<style>
  .glass-card {
    width: 100%;
    height: 350px;
    position: relative;
    border-radius: 20px;
    overflow: hidden;
    cursor: pointer;
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
  }

  .glass-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 60px rgba(102, 126, 234, 0.4);
  }

  .glass-card-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    transition: all 0.3s ease;
  }

  .glass-card:hover .glass-card-bg {
    background: rgba(255, 255, 255, 0.15);
    border-color: rgba(255, 255, 255, 0.3);
  }

  .glass-card-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 60%;
    overflow: hidden;
    z-index: 1;
  }

  .glass-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .glass-card:hover .glass-card-image img {
    transform: scale(1.1);
  }

  .glass-card-content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 2rem;
    z-index: 2;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
  }

  .glass-card-content h3 {
    margin: 0 0 0.5rem 0;
    font-size: 1.5rem;
    font-weight: 700;
    color: white;
  }

  .glass-card-content p {
    margin: 0;
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.6;
  }

  .glass-card-shine {
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(
      45deg,
      transparent 30%,
      rgba(255, 255, 255, 0.1) 50%,
      transparent 70%
    );
    transform: rotate(45deg);
    transition: all 0.6s ease;
    pointer-events: none;
    z-index: 3;
  }

  .glass-card:hover .glass-card-shine {
    top: 50%;
    left: 50%;
  }
</style>
