---
// Button component
interface Props {
  text?: string;
}

const { text = 'Start' } = Astro.props;
---

<button class="start-button">
  {text}
</button>

<style>
  .start-button {
    padding: 12px 24px;
    font-size: 16px;
    font-weight: 600;
    color: white;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition:
      transform 0.2s,
      box-shadow 0.2s;
  }

  .start-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
  }

  .start-button:active {
    transform: translateY(0);
  }
</style>
