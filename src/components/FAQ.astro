---
// Animated Interactive FAQ Component
interface Props {
  items?: Array<{
    question: string;
    answer: string;
  }>;
}

const { items = [] } = Astro.props;
---

<div class="faq-container">
  {
    items.map((item, index) => (
      <div class="faq-item" data-index={index}>
        <button class="faq-question" data-faq-index={index}>
          <span class="faq-question-text">{item.question}</span>
          <span class="faq-icon">
            <svg
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path d="M18 6L6 18M6 6l12 12" />
            </svg>
          </span>
        </button>
        <div class="faq-answer" data-answer-index={index}>
          <div class="faq-answer-content">{item.answer}</div>
        </div>
      </div>
    ))
  }
</div>

<script>
  const faqItems = document.querySelectorAll('.faq-item');

  faqItems.forEach((item, index) => {
    const question = item.querySelector('.faq-question');
    const answer = item.querySelector('.faq-answer');
    const icon = item.querySelector('.faq-icon');

    if (question && answer && icon) {
      question.addEventListener('click', () => {
        const isOpen = item.classList.contains('open');

        // Close all other items
        faqItems.forEach((otherItem, otherIndex) => {
          if (otherIndex !== index) {
            otherItem.classList.remove('open');
            const otherAnswer = otherItem.querySelector('.faq-answer') as HTMLElement | null;
            if (otherAnswer) {
              otherAnswer.style.maxHeight = '';
            }
          }
        });

        // Toggle current item
        if (isOpen) {
          item.classList.remove('open');
          (answer as HTMLElement).style.maxHeight = '';
        } else {
          item.classList.add('open');
          (answer as HTMLElement).style.maxHeight = (answer as HTMLElement).scrollHeight + 'px';
        }
      });

      // Smooth height animation on window resize
      window.addEventListener('resize', () => {
        if (item.classList.contains('open')) {
          (answer as HTMLElement).style.maxHeight = (answer as HTMLElement).scrollHeight + 'px';
        }
      });
    }
  });
</script>

<style>
  .faq-container {
    max-width: 900px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .faq-item {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.3s ease;
    position: relative;
  }

  .faq-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }

  .faq-item:hover {
    border-color: rgba(102, 126, 234, 0.3);
    transform: translateY(-2px);
    box-shadow: 0 8px 32px rgba(102, 126, 234, 0.2);
  }

  .faq-item:hover::before {
    opacity: 1;
  }

  .faq-item.open {
    border-color: rgba(102, 126, 234, 0.5);
    box-shadow: 0 8px 32px rgba(102, 126, 234, 0.3);
  }

  .faq-item.open::before {
    opacity: 1;
  }

  .faq-question {
    width: 100%;
    padding: 1.5rem 2rem;
    background: transparent;
    border: none;
    text-align: left;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    color: white;
    font-size: 1.1rem;
    font-weight: 600;
    transition: all 0.3s ease;
    position: relative;
    z-index: 1;
  }

  .faq-question:hover {
    color: #667eea;
  }

  .faq-question-text {
    flex: 1;
    line-height: 1.5;
  }

  .faq-icon {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    background: rgba(102, 126, 234, 0.2);
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    flex-shrink: 0;
  }

  .faq-icon svg {
    transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    color: #667eea;
  }

  .faq-item.open .faq-icon {
    background: rgba(102, 126, 234, 0.4);
    transform: rotate(180deg);
  }

  .faq-item.open .faq-icon svg {
    transform: rotate(45deg);
  }

  .faq-answer {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    position: relative;
  }

  .faq-answer-content {
    padding: 0 2rem 1.5rem 2rem;
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.8;
    font-size: 1rem;
    opacity: 0;
    transform: translateY(-10px);
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .faq-item.open .faq-answer-content {
    opacity: 1;
    transform: translateY(0);
    transition-delay: 0.1s;
  }

  /* Stagger animation for items */
  .faq-item {
    animation: fadeInUp 0.5s ease-out forwards;
    animation-delay: calc(var(--index, 0) * 0.1s);
    opacity: 0;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .faq-question {
      padding: 1.25rem 1.5rem;
      font-size: 1rem;
    }

    .faq-answer-content {
      padding: 0 1.5rem 1.25rem 1.5rem;
      font-size: 0.95rem;
    }
  }
</style>

<script>
  // Set animation delay based on index
  const faqItems = document.querySelectorAll('.faq-item');
  faqItems.forEach((item, index) => {
    (item as HTMLElement).style.setProperty('--index', String(index));
  });
</script>
