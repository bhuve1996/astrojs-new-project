---
// Card that reveals content on hover
interface Props {
  title?: string;
  content?: string;
  revealContent?: string;
  image?: string;
}

const {
  title = 'Hover Reveal',
  content = 'Hover to reveal more',
  revealContent = 'This is the hidden content that appears on hover!',
  image = '',
} = Astro.props;
---

<div class="hover-reveal-card">
  <div class="hover-reveal-front">
    {
      image && (
        <div class="hover-reveal-image">
          <img src={image} alt={title} />
        </div>
      )
    }
    <div class="hover-reveal-content">
      <h3>{title}</h3>
      <p>{content}</p>
    </div>
  </div>
  <div class="hover-reveal-back">
    <div class="hover-reveal-reveal">
      <p>{revealContent}</p>
    </div>
  </div>
</div>

<style>
  .hover-reveal-card {
    width: 100%;
    height: 350px;
    position: relative;
    border-radius: 20px;
    overflow: hidden;
    cursor: pointer;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
  }

  .hover-reveal-front,
  .hover-reveal-back {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .hover-reveal-front {
    display: flex;
    flex-direction: column;
    padding: 2rem;
    z-index: 2;
  }

  .hover-reveal-back {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.95), rgba(118, 75, 162, 0.95));
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    transform: translateY(100%);
    z-index: 1;
  }

  .hover-reveal-card:hover .hover-reveal-front {
    transform: translateY(-100%);
    opacity: 0;
  }

  .hover-reveal-card:hover .hover-reveal-back {
    transform: translateY(0);
  }

  .hover-reveal-image {
    width: 100%;
    height: 60%;
    border-radius: 12px;
    overflow: hidden;
    margin-bottom: 1rem;
  }

  .hover-reveal-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .hover-reveal-card:hover .hover-reveal-image img {
    transform: scale(1.1);
  }

  .hover-reveal-content h3 {
    margin: 0 0 0.5rem 0;
    font-size: 1.5rem;
    font-weight: 700;
    color: white;
  }

  .hover-reveal-content p {
    margin: 0;
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.6;
  }

  .hover-reveal-reveal p {
    margin: 0;
    color: white;
    font-size: 1.1rem;
    line-height: 1.8;
    text-align: center;
  }
</style>
