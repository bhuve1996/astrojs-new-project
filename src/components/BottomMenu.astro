---
import { siteConfig } from '../config/site';

interface Props {
  collapsed?: boolean;
}

// Get current path to determine menu state
const currentPath = Astro.url.pathname;
const menuConfig = (siteConfig.bottomMenu as Record<string, string>)[currentPath] || siteConfig.bottomMenu.default;
const isCollapsed =
  Astro.props.collapsed !== undefined ? Astro.props.collapsed : menuConfig === 'collapsed';

// Split nav items - 2 on left, 2 on right (exclude Home from bottom menu)
const navItems = siteConfig.nav.filter(item => item.href !== '/');
const leftItems = navItems.slice(0, 2);
const rightItems = navItems.slice(2, 4);
---

<div class="bottom-menu" data-collapsed={isCollapsed}>
  <!-- Left Menu Items -->
  <div class="menu-items menu-left">
    {
      leftItems.map((item, index) => (
        <a href={item.href} class="menu-item" style={`--delay: ${index * 0.1}s`}>
          {item.label}
        </a>
      ))
    }
  </div>

  <!-- Center Button (3 dots) -->
  <button class="menu-button" id="bottom-menu-btn" aria-label="Toggle menu">
    <span class="dot"></span>
    <span class="dot"></span>
    <span class="dot"></span>
  </button>

  <!-- Right Menu Items -->
  <div class="menu-items menu-right">
    {
      rightItems.map((item, index) => (
        <a href={item.href} class="menu-item" style={`--delay: ${index * 0.1}s`}>
          {item.label}
        </a>
      ))
    }
  </div>

  <!-- Left Social Icons -->
  <div class="social-icons social-icons-left">
    <a
      href={siteConfig.contact.social.twitter.url}
      target="_blank"
      rel="noopener"
      class="social-icon"
      aria-label={siteConfig.contact.social.twitter.label}
    >
      <span set:html={siteConfig.contact.social.twitter.icon} />
    </a>
    <a
      href={siteConfig.contact.social.linkedin.url}
      target="_blank"
      rel="noopener"
      class="social-icon"
      aria-label={siteConfig.contact.social.linkedin.label}
    >
      <span set:html={siteConfig.contact.social.linkedin.icon} />
    </a>
  </div>

  <!-- Right Social Icons -->
  <div class="social-icons social-icons-right">
    <a
      href={siteConfig.contact.social.github.url}
      target="_blank"
      rel="noopener"
      class="social-icon"
      aria-label={siteConfig.contact.social.github.label}
    >
      <span set:html={siteConfig.contact.social.github.icon} />
    </a>
    <a
      href={siteConfig.contact.social.instagram.url}
      target="_blank"
      rel="noopener"
      class="social-icon"
      aria-label={siteConfig.contact.social.instagram.label}
    >
      <span set:html={siteConfig.contact.social.instagram.icon} />
    </a>
  </div>
</div>

<script is:inline>
  (function() {
    const menuButton = document.getElementById('bottom-menu-btn');
    const bottomMenu = document.querySelector('.bottom-menu');
    
    if (menuButton && bottomMenu) {
      const isCollapsed = bottomMenu.getAttribute('data-collapsed') === 'true';
      
      if (isCollapsed) {
        bottomMenu.classList.add('collapsed');
      }

      let hoverTimeout = null;
      let closeTimeout = null;

      // Click toggle
      menuButton.addEventListener('click', function() {
        bottomMenu.classList.toggle('open');
      });

      // Hover to open (with delay)
      menuButton.addEventListener('mouseenter', function() {
        if (closeTimeout) {
          clearTimeout(closeTimeout);
          closeTimeout = null;
        }
        hoverTimeout = setTimeout(function() {
          bottomMenu.classList.add('open');
        }, 200);
      });

      // Keep open when hovering over menu items
      const menuItems = bottomMenu.querySelectorAll('.menu-item');
      menuItems.forEach(function(item) {
        item.addEventListener('mouseenter', function() {
          if (closeTimeout) {
            clearTimeout(closeTimeout);
            closeTimeout = null;
          }
          bottomMenu.classList.add('open');
        });
      });

      // Close when mouse leaves menu area
      bottomMenu.addEventListener('mouseleave', function() {
        if (hoverTimeout) {
          clearTimeout(hoverTimeout);
          hoverTimeout = null;
        }
        closeTimeout = setTimeout(function() {
          bottomMenu.classList.remove('open');
        }, 300);
      });
    }
  })();
</script>

<style>
  .bottom-menu {
    position: fixed;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 1000;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0; /* Remove gap, use margins instead */
    width: 100%;
    max-width: 100vw;
    padding: 0 1rem;
    box-sizing: border-box;
  }

  /* Menu Button */
  .menu-button {
    width: 56px;
    height: 56px;
    border-radius: 50%;
    background: rgba(102, 126, 234, 0.9);
    backdrop-filter: blur(10px);
    border: 2px solid rgba(255, 255, 255, 0.2);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 4px;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 20px rgba(102, 126, 234, 0.3);
    flex-shrink: 0;
    z-index: 100;
    order: 2;
  }

  .menu-button:hover {
    transform: scale(1.1);
    box-shadow: 0 6px 30px rgba(102, 126, 234, 0.5);
  }

  .menu-button .dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: white;
    transition: all 0.3s ease;
  }

  /* Menu Items Container */
  .menu-items {
    display: flex;
    gap: 0.75rem;
    transition: opacity 0.4s cubic-bezier(0.16, 1, 0.3, 1), transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    z-index: 10;
  }

  .menu-left {
    order: 1; /* Same as social-icons-left, but display:none when closed */
  }

  .menu-right {
    order: 3; /* Same as social-icons-right, but display:none when closed */
  }

  /* Menu Item */
  .menu-item {
    padding: 0.75rem 1.5rem;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 50px;
    color: white;
    text-decoration: none;
    font-weight: 500;
    font-size: 0.9rem;
    white-space: nowrap;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    cursor: pointer;
  }

  .menu-item:hover {
    background: rgba(102, 126, 234, 0.3);
    border-color: rgba(102, 126, 234, 0.5);
    transform: translateY(-3px) scale(1.05);
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
  }

  /* Social Icons Container */
  .social-icons {
    display: flex;
    gap: 0.75rem;
    transition: opacity 0.4s cubic-bezier(0.16, 1, 0.3, 1), transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    z-index: 10;
  }

  .social-icons-left {
    order: 1; /* Left side - before button */
  }

  .social-icons-right {
    order: 3; /* Right side - after button */
  }

  /* Social Icon */
  .social-icon {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    flex-shrink: 0;
    cursor: pointer;
  }

  .social-icon:hover {
    background: rgba(102, 126, 234, 0.3);
    border-color: rgba(102, 126, 234, 0.5);
    transform: translateY(-3px) scale(1.15);
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
  }

  /* Default State: Hide menu items, show social icons */
  .menu-items {
    opacity: 0;
    pointer-events: none;
    transform: scale(0.8);
    width: 0;
    max-width: 0;
    overflow: hidden;
    margin: 0;
    gap: 0;
  }

  .social-icons {
    opacity: 1;
    pointer-events: auto;
    transform: scale(1);
  }

  .social-icons-left {
    margin-right: 1.5rem;
  }

  .social-icons-right {
    margin-left: 1.5rem;
  }

  /* Open State: Show menu items, hide social icons */
  .bottom-menu.open .menu-items {
    opacity: 1;
    pointer-events: auto;
    transform: scale(1);
    width: auto;
    max-width: none;
    overflow: visible;
    gap: 0.75rem;
    margin: 0;
  }

  .bottom-menu.open .menu-left {
    margin-right: 1.5rem;
  }

  .bottom-menu.open .menu-right {
    margin-left: 1.5rem;
  }

  .bottom-menu.open .menu-item {
    animation: slideIn 0.4s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    animation-delay: var(--delay, 0s);
  }

  .bottom-menu.open .menu-left .menu-item {
    animation-name: slideInLeft;
  }

  .bottom-menu.open .menu-right .menu-item {
    animation-name: slideInRight;
  }

  .bottom-menu.open .social-icons {
    opacity: 0;
    pointer-events: none;
    transform: scale(0.8);
    width: 0;
    max-width: 0;
    overflow: hidden;
    margin: 0;
    gap: 0;
  }

  .bottom-menu.open .social-icons-left {
    margin-right: 0;
  }

  .bottom-menu.open .social-icons-right {
    margin-left: 0;
  }

  /* Animations */
  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateY(8px) scale(0.95);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  @keyframes slideInLeft {
    from {
      opacity: 0;
      transform: translateX(15px) scale(0.9);
    }
    to {
      opacity: 1;
      transform: translateX(0) scale(1);
    }
  }

  @keyframes slideInRight {
    from {
      opacity: 0;
      transform: translateX(-15px) scale(0.9);
    }
    to {
      opacity: 1;
      transform: translateX(0) scale(1);
    }
  }

  /* Responsive - Tablet */
  @media (max-width: 1024px) and (min-width: 769px) {
    .social-icons-left {
      margin-right: 1rem;
    }

    .social-icons-right {
      margin-left: 1rem;
    }

    .bottom-menu.open .menu-left {
      margin-right: 1rem;
    }

    .bottom-menu.open .menu-right {
      margin-left: 1rem;
    }
  }

  /* Responsive - Mobile */
  @media (max-width: 768px) {
    .bottom-menu {
      bottom: 1rem;
      left: 0;
      right: 0;
      transform: none;
      padding: 0 0.5rem;
      justify-content: center;
    }

    .menu-button {
      width: 48px;
      height: 48px;
      order: 2;
    }

    .menu-item {
      padding: 0.6rem 1.2rem;
      font-size: 0.85rem;
    }

    .social-icon {
      width: 32px;
      height: 32px;
    }

    .social-icons-left {
      order: 1;
      margin-right: 0.5rem;
    }

    .social-icons-right {
      order: 3;
      margin-left: 0.5rem;
    }

    .menu-left {
      order: 1;
      margin-right: 0.5rem;
    }

    .menu-right {
      order: 3;
      margin-left: 0.5rem;
    }

    .bottom-menu.open .menu-left {
      margin-right: 0.5rem;
    }

    .bottom-menu.open .menu-right {
      margin-left: 0.5rem;
    }
  }
</style>
