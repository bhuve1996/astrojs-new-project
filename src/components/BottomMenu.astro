---
import { siteConfig } from '../config/site';

interface Props {
  collapsed?: boolean;
}

// Get current path to determine menu state
const currentPath = Astro.url.pathname;
const menuConfig = (siteConfig.bottomMenu as Record<string, string>)[currentPath] || siteConfig.bottomMenu.default;
const isCollapsed =
  Astro.props.collapsed !== undefined ? Astro.props.collapsed : menuConfig === 'collapsed';

// Split nav items - 2 on left, 2 on right (exclude Home from bottom menu)
const navItems = siteConfig.nav.filter(item => item.href !== '/');
const leftItems = navItems.slice(0, 2);
const rightItems = navItems.slice(2, 4);
---

<div class="bottom-menu" data-collapsed={isCollapsed}>
  <!-- Left Menu Items -->
  <div class="menu-items menu-left">
    {
      leftItems.map((item, index) => (
        <a href={item.href} class="menu-item" style={`--delay: ${index * 0.1}s`}>
          {item.label}
        </a>
      ))
    }
  </div>

  <!-- Center Button (3 dots) -->
  <button class="menu-button" id="bottom-menu-btn" aria-label="Toggle menu">
    <span class="dot"></span>
    <span class="dot"></span>
    <span class="dot"></span>
  </button>

  <!-- Right Menu Items -->
  <div class="menu-items menu-right">
    {
      rightItems.map((item, index) => (
        <a href={item.href} class="menu-item" style={`--delay: ${index * 0.1}s`}>
          {item.label}
        </a>
      ))
    }
  </div>

  <!-- Social Icons (shown when menu is closed or collapsed) -->
  <!-- Left Social Icons -->
  <div class="social-icons social-icons-left">
    <a
      href={siteConfig.contact.social.twitter.url}
      target="_blank"
      rel="noopener"
      class="social-icon"
      aria-label={siteConfig.contact.social.twitter.label}
    >
      <Fragment set:html={siteConfig.contact.social.twitter.icon} />
    </a>
    <a
      href={siteConfig.contact.social.linkedin.url}
      target="_blank"
      rel="noopener"
      class="social-icon"
      aria-label={siteConfig.contact.social.linkedin.label}
    >
      <Fragment set:html={siteConfig.contact.social.linkedin.icon} />
    </a>
  </div>

  <!-- Right Social Icons -->
  <div class="social-icons social-icons-right">
    <a
      href={siteConfig.contact.social.github.url}
      target="_blank"
      rel="noopener"
      class="social-icon"
      aria-label={siteConfig.contact.social.github.label}
    >
      <Fragment set:html={siteConfig.contact.social.github.icon} />
    </a>
    <a
      href={siteConfig.contact.social.instagram.url}
      target="_blank"
      rel="noopener"
      class="social-icon"
      aria-label={siteConfig.contact.social.instagram.label}
    >
      <Fragment set:html={siteConfig.contact.social.instagram.icon} />
    </a>
  </div>
</div>

<script>
  try {
    const menuButton = document.getElementById('bottom-menu-btn');
    const bottomMenu = document.querySelector('.bottom-menu');
    
    if (!menuButton || !bottomMenu) {
      console.warn('Bottom menu elements not found');
      return;
    }

    const isCollapsed = bottomMenu?.getAttribute('data-collapsed') === 'true';
    // If collapsed, show social icons by default, menu items on click/hover
    if (isCollapsed) {
      bottomMenu.classList.add('collapsed');
    }

    menuButton.addEventListener('click', () => {
      bottomMenu.classList.toggle('open');
    });

    // Also open on hover (with delay for smoother experience)
    let hoverTimeout: number | null = null;
    menuButton.addEventListener('mouseenter', function() {
      hoverTimeout = window.setTimeout(function() {
        bottomMenu.classList.add('open');
      }, 200); // 200ms delay before opening
    });
    
    menuButton.addEventListener('mouseleave', function() {
      if (hoverTimeout) {
        clearTimeout(hoverTimeout);
        hoverTimeout = null;
      }
    });

    // Keep open when hovering over menu items
    const menuItems = bottomMenu.querySelectorAll('.menu-item');
    let menuHoverTimeout: number | null = null;
    
    menuItems.forEach(function(item) {
      item.addEventListener('mouseenter', function() {
        if (menuHoverTimeout) {
          clearTimeout(menuHoverTimeout);
        }
        bottomMenu.classList.add('open');
      });
    });

    // Close when mouse leaves the menu area (with delay)
    bottomMenu.addEventListener('mouseleave', function() {
      menuHoverTimeout = window.setTimeout(function() {
        bottomMenu.classList.remove('open');
      }, 300); // 300ms delay before closing
    });
  } catch (error) {
    console.error('Error initializing bottom menu:', error);
  }
</script>

<style>
  .bottom-menu {
    position: fixed;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 1000;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1.5rem;
    transition: all 0.3s ease;
    width: 100%;
    max-width: 100vw;
    padding: 0 1rem;
    box-sizing: border-box;
  }

  .menu-button {
    width: 56px;
    height: 56px;
    border-radius: 50%;
    background: rgba(102, 126, 234, 0.9);
    backdrop-filter: blur(10px);
    border: 2px solid rgba(255, 255, 255, 0.2);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 4px;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 20px rgba(102, 126, 234, 0.3);
    flex-shrink: 0;
    position: relative;
    z-index: 100;
    order: 2;
  }

  .menu-button:hover {
    transform: scale(1.1);
    box-shadow: 0 6px 30px rgba(102, 126, 234, 0.5);
  }

  .menu-button .dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: white;
    transition: all 0.3s ease;
  }

  .menu-items {
    display: flex;
    gap: 0.75rem;
    transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    position: relative;
    z-index: 10;
  }

  .menu-left {
    flex-direction: row;
    order: 1;
    margin-right: 1.5rem;
  }

  .menu-right {
    flex-direction: row;
    order: 3;
    margin-left: 1.5rem;
  }

  .menu-item {
    padding: 0.75rem 1.5rem;
    background: rgba(255, 255, 255, 0);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0);
    border-radius: 50px;
    color: white;
    text-decoration: none;
    font-weight: 500;
    font-size: 0.9rem;
    white-space: nowrap;
    transition: background 0.4s ease, border-color 0.4s ease, transform 0.3s cubic-bezier(0.16, 1, 0.3, 1), opacity 0.4s ease, box-shadow 0.3s ease;
    opacity: 0;
    cursor: pointer;
  }

  .menu-item:hover {
    background: rgba(102, 126, 234, 0.3);
    border-color: rgba(102, 126, 234, 0.5);
    transform: translateY(-3px) scale(1.05);
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
  }

  .menu-item:active {
    transform: translateY(-1px) scale(1.02);
  }

  .social-icons {
    position: relative;
    display: flex;
    gap: 0.75rem;
    transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    pointer-events: auto;
    z-index: 10;
  }

  .social-icons-left {
    order: 1;
    flex-direction: row;
    margin-right: 1.5rem;
  }

  .social-icons-right {
    order: 3;
    flex-direction: row;
    margin-left: 1.5rem;
  }

  .social-icon {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    flex-shrink: 0;
    cursor: pointer;
  }

  .social-icon:hover {
    background: rgba(102, 126, 234, 0.3);
    border-color: rgba(102, 126, 234, 0.5);
    transform: translateY(-3px) scale(1.15);
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
  }

  .social-icon:active {
    transform: translateY(-1px) scale(1.05);
  }

  /* Default state - hide menu items, show social icons */
  .menu-items {
    opacity: 0;
    pointer-events: none;
    transform: translateX(0) scale(0.8);
    width: 0;
    overflow: hidden;
  }

  .social-icons {
    opacity: 1;
    pointer-events: auto;
    transform: scale(1);
  }

  /* When menu is open (hover/click) - show menu items, hide social icons */
  .bottom-menu.open .menu-items {
    opacity: 1;
    pointer-events: auto;
    transform: translateX(0) scale(1);
    width: auto;
    overflow: visible;
    transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .bottom-menu.open .menu-item {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.2);
    opacity: 1;
    transition: background 0.5s ease 0.2s, border-color 0.5s ease 0.2s, transform 0.3s ease, opacity 0.4s ease 0.1s;
  }

  .bottom-menu.open .social-icons {
    opacity: 0;
    pointer-events: none;
    transform: scale(0.8);
    transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .bottom-menu.open .menu-left .menu-item {
    animation: slideInLeft 0.5s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    animation-delay: var(--delay, 0s);
  }

  .bottom-menu.open .menu-right .menu-item {
    animation: slideInRight 0.5s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    animation-delay: var(--delay, 0s);
  }

  @keyframes slideInLeft {
    from {
      opacity: 0;
      transform: translateX(20px) scale(0.8);
    }
    to {
      opacity: 1;
      transform: translateX(0) scale(1);
    }
  }

  @keyframes slideInRight {
    from {
      opacity: 0;
      transform: translateX(-20px) scale(0.8);
    }
    to {
      opacity: 1;
      transform: translateX(0) scale(1);
    }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .bottom-menu {
      bottom: 1rem;
      left: 0;
      right: 0;
      transform: none;
      padding: 0 0.5rem;
      gap: 0.75rem;
      justify-content: space-between;
      max-width: 100vw;
    }

    .menu-button {
      width: 48px;
      height: 48px;
      order: 2;
      flex-shrink: 0;
    }

    .menu-item {
      padding: 0.5rem 1rem;
      font-size: 0.8rem;
      white-space: nowrap;
    }

    .menu-items {
      gap: 0.5rem;
      max-width: calc(50% - 40px);
    }

    .menu-left {
      order: 1;
      justify-content: flex-end;
      margin-right: 0.75rem;
    }

    .menu-right {
      order: 3;
      justify-content: flex-start;
      margin-left: 0.75rem;
    }

    .social-icons {
      gap: 0.5rem;
    }

    .social-icon {
      width: 32px;
      height: 32px;
    }

    .social-icons-left {
      order: 1;
      justify-content: flex-end;
      margin-right: 0.75rem;
    }

    .social-icons-right {
      order: 3;
      justify-content: flex-start;
      margin-left: 0.75rem;
    }
  }
</style>
