---
// Interactive Popup/Modal Component
import { siteConfig } from '../config/site';

interface Props {
  id?: string;
  title?: string;
  content?: string;
  image?: string;
  type?: 'info' | 'image' | 'form' | 'custom';
  size?: 'small' | 'medium' | 'large' | 'fullscreen';
  trigger?: 'click' | 'hover' | 'auto';
  autoDelay?: number;
  showClose?: boolean;
  children?: unknown;
}

const {
  id = `popup-${Math.random().toString(36).substring(2, 11)}`,
  title = '',
  content = '',
  image = '',
  type = siteConfig.popup.defaultType,
  size = siteConfig.popup.defaultSize,
  trigger = siteConfig.popup.defaultTrigger,
  autoDelay = 0,
  showClose = siteConfig.popup.defaultShowClose,
} = Astro.props;
---

<div class="popup-trigger" data-popup-id={id} data-trigger={trigger}>
  <slot name="trigger">
    <button class="popup-trigger-button">{siteConfig.popup.labels.openPopup}</button>
  </slot>
</div>

<div class="popup-overlay" id={id} data-size={size} data-type={type}>
  <div class="popup-backdrop"></div>
  <div class="popup-container">
    {
      showClose && (
        <button class="popup-close" aria-label="Close">
          <svg
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <path d="M18 6L6 18M6 6l12 12" />
          </svg>
        </button>
      )
    }

    <div class="popup-content">
      {
        image && type === 'image' && (
          <div class="popup-image">
            <img src={image} alt={title || 'Popup image'} />
          </div>
        )
      }

      {title && <h2 class="popup-title">{title}</h2>}

      {content && <div class="popup-text">{content}</div>}

      <slot />
    </div>
  </div>
</div>

<script is:inline define:vars={{ popupId: id, triggerType: trigger, delay: autoDelay }}>
  // @ts-nocheck - Variables are injected at runtime via define:vars
  try {
    const popup = document.getElementById(popupId);
    const triggerElement = document.querySelector(`[data-popup-id="${popupId}"]`);
    
    if (!popup || !triggerElement) {
      console.warn('Popup elements not found:', popupId);
      return;
    }

    const closeButton = popup?.querySelector('.popup-close');
    const backdrop = popup?.querySelector('.popup-backdrop');
    // Open popup
    const openPopup = () => {
      popup.classList.add('active');
      document.body.style.overflow = 'hidden';
    };

    // Close popup
    const closePopup = () => {
      popup.classList.remove('active');
      document.body.style.overflow = '';
    };

    // Trigger based on type
    if (triggerType === 'click') {
      triggerElement.addEventListener('click', e => {
        e.preventDefault();
        openPopup();
      });
    } else if (triggerType === 'hover') {
      triggerElement.addEventListener('mouseenter', () => {
        openPopup();
      });
      popup.addEventListener('mouseleave', () => {
        closePopup();
      });
    } else if (triggerType === 'auto' && delay > 0) {
      setTimeout(() => {
        openPopup();
      }, delay);
    }

    // Close handlers
    if (closeButton) {
      closeButton.addEventListener('click', closePopup);
    }

    if (backdrop) {
      backdrop.addEventListener('click', closePopup);
    }

    // Escape key
    document.addEventListener('keydown', e => {
      if (e.key === 'Escape' && popup.classList.contains('active')) {
        closePopup();
      }
    });
  } catch (error) {
    console.error('Error initializing popup:', error);
  }
</script>

<style>
  .popup-trigger {
    display: inline-block;
  }

  .popup-trigger-button {
    padding: 0.75rem 1.5rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border: none;
    border-radius: 8px;
    color: white;
    font-weight: 600;
    cursor: pointer;
    transition:
      transform 0.2s ease,
      box-shadow 0.2s ease;
  }

  .popup-trigger-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
  }

  .popup-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 9999;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .popup-overlay.active {
    opacity: 1;
    visibility: visible;
    pointer-events: auto;
  }

  .popup-backdrop {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
  }

  .popup-container {
    position: relative;
    z-index: 1;
    background: rgba(26, 31, 46, 0.95);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 24px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
    max-height: 90vh;
    overflow-y: auto;
    transform: scale(0.8) translateY(20px);
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    animation: popupShake 0.5s ease-out;
  }

  .popup-overlay.active .popup-container {
    transform: scale(1) translateY(0);
  }

  @keyframes popupShake {
    0%,
    100% {
      transform: scale(0.8) translateY(20px) rotate(0deg);
    }
    25% {
      transform: scale(0.85) translateY(15px) rotate(-1deg);
    }
    50% {
      transform: scale(0.9) translateY(10px) rotate(1deg);
    }
    75% {
      transform: scale(0.95) translateY(5px) rotate(-0.5deg);
    }
  }

  /* Sizes */
  .popup-container[data-size='small'] {
    width: 100%;
    max-width: 400px;
  }

  .popup-container[data-size='medium'] {
    width: 100%;
    max-width: 600px;
  }

  .popup-container[data-size='large'] {
    width: 100%;
    max-width: 900px;
  }

  .popup-container[data-size='fullscreen'] {
    width: 100%;
    max-width: 95vw;
    height: 95vh;
    border-radius: 16px;
  }

  .popup-close {
    position: absolute;
    top: 1.5rem;
    right: 1.5rem;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    z-index: 10;
  }

  .popup-close:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: rotate(90deg) scale(1.1);
  }

  .popup-content {
    padding: 3rem;
  }

  .popup-image {
    width: 100%;
    margin-bottom: 1.5rem;
    border-radius: 12px;
    overflow: hidden;
  }

  .popup-image img {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 0.3s ease;
  }

  .popup-image:hover img {
    transform: scale(1.05);
  }

  .popup-title {
    font-size: 2rem;
    font-weight: 700;
    margin: 0 0 1rem 0;
    color: white;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .popup-text {
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.8;
    font-size: 1.1rem;
  }

  /* Image type specific */
  .popup-container[data-type='image'] .popup-content {
    padding: 0;
  }

  .popup-container[data-type='image'] .popup-image {
    margin: 0;
    border-radius: 24px;
  }

  /* Custom scrollbar */
  .popup-container::-webkit-scrollbar {
    width: 8px;
  }

  .popup-container::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 4px;
  }

  .popup-container::-webkit-scrollbar-thumb {
    background: rgba(102, 126, 234, 0.5);
    border-radius: 4px;
  }

  .popup-container::-webkit-scrollbar-thumb:hover {
    background: rgba(102, 126, 234, 0.7);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .popup-overlay {
      padding: 1rem;
    }

    .popup-content {
      padding: 2rem 1.5rem;
    }

    .popup-title {
      font-size: 1.5rem;
    }

    .popup-close {
      top: 1rem;
      right: 1rem;
      width: 36px;
      height: 36px;
    }
  }
</style>
